<html>
{{#each foo}}
{{this}}
{{/each}}

<div class="navBar">
    <ul class="hMenu">
        <li class="hMenuLinkHome"><a href="/">Home</a></li>
        <li class="hMenuLinkHome"><a href="/players">Players</a></li>
        <li class="hMenuLinkHome"><a href="/players_position">Players' Positions</a></li>
        <li class="hMenuLinkHome"><a href="/teams">Teams</a></li>
        <li class="hMenuLinkHome"><a href="/coaches">Coaches</a></li>
        <li class="hMenuLinkHome"><a href="/other">Other</a></li>
    </ul>
</div>

<div>
<h3> Associate Position(s) with a Player </h3>
    <form id="add_player_position" action="/players_position" method="post">
    Player: <select name='plyId'>
        {{#each player}}
          <option value='{{id}}'>{{firstName}} {{lastName}}</option>
        {{/each}}
    </select>
    <br>
    Position:<sup>Multi-select</sup> <select multiple name="pos" required> 
        {{!-- We display positions but the value that is submitted through the form is actually the position's id --}}
        {{#each position}}
        <option value="{{id}}">{{posName}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
    </form>
</div>
<br/>
<h3> List of Players' Positions </h3>
<table>
    <thead> 
        <th>Name</th> 
        <th>Position</th> 
    </thead> 
    <tbody> 
        {{#each player_with_pos}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{posName}}</td> 
            <td><button onclick="deletePlayerPosition({{plyId}},{{posId}})">Delete</button></td>
            <td><a href="/players_position/{{plyId}}/{{posId}}">Update</a></td>
        </tr>
        {{else}}
        <b> No player with any position found! Grant some using the form. </b>
        {{/each}} 

    </tbody>
</table>
</html> 
