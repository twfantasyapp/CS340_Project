<html>
{{#each foo}}
{{this}}
{{/each}}

<div class="navBar">
    <ul class="hMenu">
        <li class="hMenuLinkHome"><a href="/">Home</a></li>
        <li class="hMenuLinkHome"><a href="/players">Players</a></li>
        <li class="hMenuLinkHome"><a href="/players_position">Players' Positions</a></li>
        <li class="hMenuLinkHome"><a href="/teams">Teams</a></li>
        <li class="hMenuLinkHome"><a href="/coaches">Coaches</a></li>
        <li class="hMenuLinkHome"><a href="/other">Other</a></li>
    </ul>
</div>


<h2>League Coaches</h2>
<table>
    <thead> 
        <th>Last Name</th> 
        <th>First Name</th> 
        <th>D.O.B.</th> 
        <th>Email</th>
        <th>Salary</th>
        <th>Team</th>
    </thead> 
    <tbody>
        {{#each coaches}} 
        <tr> 
            <td>{{lastName}}</td> 
            <td>{{firstName}}</td> 
            <td>{{dob}}</td> 
            <td>{{email}}</td>
            <td>{{salary}}</td> 
            <td>{{team}}</td> 
            <td><a href="/coaches/{{hId}}">Edit</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

<br>

<!-- This form is to Sort the list of coaches in the coaches entity -->
<form action="/coaches/sortCoaches" method="post" class="coachesForms" id="coachesSort">
    <fieldset>
        <legend>VIEW All Coaches:</legend>
        <fieldset>
            <legend>SORT BY</legend>
            <input type="radio" name="coachSort" value="lastName" checked="checked"/> Last Name
            <input type="radio" name="coachSort" value="firstName" /> First Name
            <input type="radio" name="coachSort" value="dob" /> D.O.B.
            <input type="radio" name="coachSort" value="email" /> Email
            <input type="radio" name="coachSort" value="salary" /> Salary
            <input type="radio" name="coachSort" value="team" /> Team <br />
        </fieldset><br />
        <fieldset>
            <legend>ORDER</legend>
            <input type="radio" name="ascDesc" value="asc" checked="checked"/> Ascending<br />
            <input type="radio" name="ascDesc" value="desc" /> Descending<br />
        </fieldset><br />
        <input type="submit" name="coachSortSubmit" value="Submit" />
    </fieldset>  
</form>

<br>

<form action="/coaches/addCoach" method="post" class="coachesForms" id="coachesAdd" >
    <fieldset>
        <legend>ADD New Coach:</legend>
        Last Name: <input type="text" name="lastName" required><br />
		First Name: <input type="text" name="firstName" required><br />
		D.O.B (mm/dd/yyyy): <input type="text" name="dob"> (ex: 12/25/2017) <br />
		Email: <input type="text" name="email"><br />
		Salary: <input type="number" name="salary"><br />
        <input type="submit" name="coachAddSubmit" value="ADD" />
    </fieldset>  
</form>

<br>

<br>

<br>

</html>
